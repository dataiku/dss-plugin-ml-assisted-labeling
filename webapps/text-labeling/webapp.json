{
  "meta": {
    "label": "Text labeling",
    "description": "Manually classify text from a dataset for use in supervised learning",
    "icon": "icon-font"
  },
  "baseType": "STANDARD",
  "enableJavascriptModules": "true",
  "hasBackend": "true",
  "noJSSecurity": "true",
  "standardWebAppLibraries": [
    "jquery",
    "dataiku",
    "bootstrap",
    "font_awesome"
  ],
  "params": [
    {
      "type": "SEPARATOR",
      "name": "Input",
      "label": "Input"
    },
    {
      "type": "DATASET",
      "name": "unlabeled",
      "label": "Unlabeled data",
      "description": "Dataset containing data to label",
      "mandatory": true,
      "canSelectForeign": true,
      "canCreateDataset": false
    },
    {
      "type": "DATASET_COLUMN",
      "datasetParamName": "unlabeled",
      "name": "text_column",
      "label": "Text Column",
      "description": "Column containing the text to label",
      "mandatory": true,
      "canSelectForeign": true,
      "canCreateDataset": false
    },
    {
      "name": "categories",
      "type": "KEY_VALUE_LIST",
      "label": "Categories",
      "description": "Category name â†’ optional description",
      "mandatory": true
    },
    {
      "type": "SEPARATOR",
      "name": "Output",
      "label": " Output"
    },
    {
      "type": "DATASET",
      "name": "labels_ds",
      "label": "Labels dataset",
      "description": "Dataset to save the labels into",
      "mandatory": false,
      "canSelectForeign": false,
      "canCreateDataset": true,
      "markCreatedAsBuilt": true
    },
    {
      "type": "DATASET",
      "name": "metadata_ds",
      "label": "Labeling metadata dataset",
      "description": "Contains additional information such as annotator and timestamps for each labeling",
      "mandatory": true,
      "canSelectForeign": true,
      "canCreateDataset": true,
      "markCreatedAsBuilt": true
    },
    {
      "name": "label_col_name",
      "type": "STRING",
      "label": "Labels target column name",
      "defaultValue": "label",
      "description": "Name of the label column in the Labels dataset",
      "mandatory": true
    },
    {
      "type": "SEPARATOR",
      "name": "Other settings",
      "label": "Other settings"
    },
    {
      "type": "BOOLEAN",
      "name": "use_prelabeling",
      "label": "Activate Prelabeling",
      "default": false
    },
    {
      "type": "SELECT",
      "name": "prelabeling_engine",
      "label": "Prelabeling engine",
      "selectChoices": [
        { "value": "classic", "label": "Classic (Re-use labeled data)"}
      ],
      "visibilityCondition": "model.use_prelabeling",
      "defaultValue": "classic"
    },
    {
      "type": "SELECT",
      "name": "tokenisation_engine",
      "label": "Tokenisation",
      "selectChoices": [
        { "value": "white_space", "label": "White Space (Split along white spaces)"},
        { "value": "char", "label": "Character (Split along each character)"}
      ],
      "defaultValue": "white_space",
      "required": true
    }
  ]
}
